<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bbs">
<!-- 전체 페이지개수 계산할 때 전체 게시물 개수가 필요함 total / page = pages  -->
	<select id="count" resultType="int">
		select count(*) from bbs b
	</select>

	<select id="list" parameterType="PageVO" resultType="bbsVO">
		select *
		from
			(select row_number() over(order by id desc) as bbs_no, b.id ,b.title, b.content from bbs b) b2
		where b2.bbs_no between ${start} and ${end}
	</select>
</mapper>
